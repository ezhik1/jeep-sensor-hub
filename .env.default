# Jeep Sensor Hub Environment Configuration
# Copy this file to .env and customize the values for your setup

# User configuration
JEEP_USER=ezhik
JEEP_HOME=/home/ezhik

# Project configuration
PROJECT_DIR=/home/ezhik/Development/jeep-sensor-hub

# Display configuration
DISPLAY_WIDTH=800
DISPLAY_HEIGHT=480
DISPLAY_ROTATION=1

# Service configuration
SERVICE_NAME=jeep-sensor-hub-ui
SERVICE_RESTART_SEC=10
SERVICE_SLEEP_SEC=5

# SDL configuration
SDL_VIDEO_DRIVER=fbcon
SDL_FBDEV=/dev/fb0
SDL_VIDEO_FBCON_ROTATION=0
